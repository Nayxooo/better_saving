<Window x:Class="better_saving.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:better_saving.ViewModels"
        xmlns:views="clr-namespace:better_saving.Views"
        xmlns:local="clr-namespace:better_saving"
        xmlns:converter="clr-namespace:better_saving.Converters"
        Title="EasySave"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="1000"
        Background="#FF1E1E1E">
    <Window.Resources>
        <converter:NullOrEmptyToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <!-- Global UI Scaling -->
        <ScaleTransform x:Key="GlobalScale"
                        ScaleX="1.5"
                        ScaleY="1.5"/>
        <!-- Custom Button Style for Settings View -->
        <Style x:Key="SettingsButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#22272A"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10"
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="#32373A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate DataType="{x:Type vm:BackupCreationViewModel}">
            <views:BackupCreationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BackupStatusViewModel}">
            <views:BackupStatusView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <StackPanel Margin="10">
                <TextBlock Text="{DynamicResource SettingsTitle}"
                           Foreground="White"
                           FontSize="16"/>
                <TextBlock Text="{DynamicResource BlockedSoftwareLabel}"
                           Foreground="White"/>
                <TextBox Text="{Binding BlockedSoftwareText}"
                         Margin="0,5"
                         ToolTip="{DynamicResource BlockedSoftwareToolTip}"/>

                <TextBlock Text="{DynamicResource FileExtensionsLabel}"
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <TextBox Text="{Binding FileExtensionsText}"
                         Margin="0,5"
                         ToolTip="{DynamicResource FileExtensionsToolTip}"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,10 0,0">
                    <Button Content="FR"
                            Width="60"
                            Height="30"
                            Margin="0,0,5,0"
                            Command="{Binding SetLanguageCommand}"
                            CommandParameter="fr-FR"
                            Cursor="Hand"
                            Background="#22272A"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="Changer la langue en Français">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                        Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="10"
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter x:Name="contentPresenter"
                                                                  Focusable="False"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  RecognizesAccessKey="True"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            TargetName="border"
                                                            Value="#32373A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FocusVisualStyle"
                                        Value="{x:Null}"/>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="EN"
                            Width="60"
                            Height="30"
                            Command="{Binding SetLanguageCommand}"
                            CommandParameter="en-US"
                            Cursor="Hand"
                            Background="#22272A"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="Change language to English">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                        Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="10"
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter x:Name="contentPresenter"
                                                                  Focusable="False"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  RecognizesAccessKey="True"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            TargetName="border"
                                                            Value="#32373A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FocusVisualStyle"
                                        Value="{x:Null}"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,10">
                    <Button Content="{DynamicResource Cancel}"
                            Command="{Binding CancelCommand}"
                            Width="80"
                            Height="30"
                            Margin="5"
                            Cursor="Hand"
                            Background="#22272A"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="{DynamicResource CancelButtonToolTip}"
                            Style="{StaticResource SettingsButtonStyle}"/>
                    <Button Content="{DynamicResource Save}"
                            Command="{Binding SaveCommand}"
                            Width="80"
                            Height="30"
                            Margin="5"
                            Cursor="Hand"
                            Background="#22272A"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="{DynamicResource SaveButtonToolTip}"
                            Style="{StaticResource SettingsButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="1.5"
                            ScaleY="1.5"/>
        </Grid.LayoutTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"
                    MinWidth="250"
                    MaxWidth="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Column="0"
                        Content="{Binding ListVM}"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Stretch"/>

        <ContentControl Grid.Column="1"
                        MinWidth="300"
                        Content="{Binding CurrentView}"
                        HorizontalAlignment="Stretch"/>
    </Grid>
</Window>