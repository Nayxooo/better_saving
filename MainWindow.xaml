<Window x:Class="better_saving.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:better_saving.ViewModels"
        Title="EasySave" Height="600" Width="1000" Background="#FF1E1E1E">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel for BackupListView -->
        <ContentControl Grid.Column="0"
                        Content="{Binding ListVM}"
            />

        <!-- Right panel for other content, e.g., BackupCreationView or status -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>
