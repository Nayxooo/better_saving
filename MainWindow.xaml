<Window x:Class="better_saving.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:better_saving.ViewModels"
        xmlns:views="clr-namespace:better_saving.Views"
        xmlns:local="clr-namespace:better_saving"
        xmlns:converter="clr-namespace:better_saving.Converters"
        Title="EasySave33"
        Icon="pack://application:,,,/Assets/AppIcon/icon.ico"
        Height="700"
        Width="1300"
        MinHeight="700"
        MinWidth="1300"
        Background="#FF1E1E1E">    <Window.Resources>
        <converter:NullOrEmptyToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <!-- Global UI Scaling -->
        <ScaleTransform x:Key="GlobalScale"
                        ScaleX="1.5"
                        ScaleY="1.5"/>
        <!-- Custom Button Style for Settings View -->
        <Style x:Key="SettingsButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#22272A"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10"
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="#32373A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style with Rounded Corners -->
        <Style x:Key="RoundedTextBoxStyle"
       TargetType="TextBox">
            <Setter Property="Background"
            Value="#FF22272A"/>
            <Setter Property="Foreground"
            Value="White"/>
            <Setter Property="BorderBrush"
            Value="Gray"/>
            <Setter Property="BorderThickness"
            Value="1"/>
            <Setter Property="Padding"
            Value="5,3"/>
            <Setter Property="Height"
            Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate DataType="{x:Type vm:BackupCreationViewModel}">
            <views:BackupCreationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BackupStatusViewModel}">
            <views:BackupStatusView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BAViewModel}">
            <views:BAView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <StackPanel Margin="10">
                <TextBlock Text="{DynamicResource SettingsTitle}"
                           Foreground="White"
                           FontSize="16"/>
                <TextBlock Text="{DynamicResource BlockedSoftwareLabel}"
                           Foreground="White"/>
                <TextBox Text="{Binding BlockedSoftwareText}"
                         Margin="0,5"
                         ToolTip="{DynamicResource BlockedSoftwareToolTip}"
                         Style="{StaticResource RoundedTextBoxStyle}"/>
                <TextBlock Text="{DynamicResource FileExtensionsLabel}"
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <TextBox Text="{Binding FileExtensionsText}"
                         Margin="0,5"
                         ToolTip="{DynamicResource FileExtensionsToolTip}"
                         Style="{StaticResource RoundedTextBoxStyle}"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,10 0,0">                    <Button Content="FR"
                            Width="60"
                            Height="30"
                            Margin="0,0,5,0"
                            Command="{Binding SetLanguageCommand}"
                            CommandParameter="fr-FR"
                            Cursor="Hand"
                            Background="{Binding IsCurrentLanguageFR, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#3b7a57;#22272A'}"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="Changer la langue en Français">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                        Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="10"
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter x:Name="contentPresenter"
                                                                  Focusable="False"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  RecognizesAccessKey="True"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            TargetName="border"
                                                            Value="#32373A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FocusVisualStyle"
                                        Value="{x:Null}"/>
                            </Style>
                        </Button.Style>
                    </Button>                    <Button Content="EN"
                            Width="60"
                            Height="30"
                            Command="{Binding SetLanguageCommand}"
                            CommandParameter="en-US"
                            Cursor="Hand"
                            Background="{Binding IsCurrentLanguageEN, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='#3b7a57;#22272A'}"
                            BorderThickness="0"
                            Foreground="White"
                            ToolTip="Change language to English">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
                                        Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="10"
                                                    x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter x:Name="contentPresenter"
                                                                  Focusable="False"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  Margin="{TemplateBinding Padding}"
                                                                  RecognizesAccessKey="True"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            TargetName="border"
                                                            Value="#32373A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FocusVisualStyle"
                                        Value="{x:Null}"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                    Margin="0,10"
                    HorizontalAlignment="Left">
                    <Button Content="{DynamicResource Cancel}"
                        Command="{Binding CancelCommand}"
                        Width="80"
                        Height="30"
                        Margin="0"
                        Cursor="Hand"
                        Background="#22272A"
                        BorderThickness="0"
                        Foreground="White"
                        ToolTip="{DynamicResource CancelButtonToolTip}"
                        Style="{StaticResource SettingsButtonStyle}"/>                    <Button Content="{DynamicResource Save}"
                        Command="{Binding SaveCommand}"
                        Width="80"
                        Height="30"
                        Margin="5"
                        Cursor="Hand"
                        Background="#3b7a57"
                        BorderThickness="0"
                        Foreground="White"
                        ToolTip="{DynamicResource SaveButtonToolTip}"
                        Style="{StaticResource SettingsButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- Top Save Button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" DockPanel.Dock="Top">
            <Button Content="Sauvegarder"
                Command="{Binding SaveCommand}"
                Width="120"
                Height="40"
                Background="#3b7a57"
                Foreground="White"
                Cursor="Hand"
                ToolTip="Sauvegarder maintenant"
                Style="{StaticResource SettingsButtonStyle}" />
        </StackPanel>

        <Grid>
            <Grid.LayoutTransform>
                <ScaleTransform ScaleX="1.5"
                            ScaleY="1.5"/>
            </Grid.LayoutTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                              MinWidth="250"
                              MaxWidth="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="0"
                        Content="{Binding ListVM}"
                        HorizontalAlignment="Stretch"/>

            <!-- Colonne droite : CurrentView + Monitoring Réseau -->
            <Grid Grid.Column="1" MinWidth="300">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Vue principale -->
                <ContentControl Content="{Binding CurrentView}" Grid.Row="0" HorizontalAlignment="Stretch" />

                <!-- Monitoring Réseau -->
                <StackPanel Grid.Row="1" Margin="10" Background="#FF1E1E1E">
                    <TextBlock Text="Bande passante max (Ko/s):" Foreground="White" />
                    <TextBox Name="BandwidthLimitBox" Text="500" Width="100" Margin="0,5" />

                    <TextBlock Text="Utilisation réseau (Ko/s):" Foreground="White" Margin="0,0,0,5" />
                    <ProgressBar Name="NetworkUsageBar" Minimum="0" Maximum="10000" Height="20" Margin="0,0,0,5" />
                    <TextBlock Name="NetworkUsageText" Foreground="White" FontWeight="Bold" />
                </StackPanel>
            </Grid>

        </Grid>
    </DockPanel>
</Window>